{
  "name": "yte-wc-core",
  "description": "Webcomponent yte-wc-core following open-wc recommendations",
  "license": "MIT",
  "author": "yte-wc-core",
  "version": "0.0.0",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./yte-button.js": "./dist/src/yte-button.js"
  },
  "scripts": {
    "start": "tsc && concurrently -k -r \"yarn tsc\" \"yarn sass:watch\" \"wds\"",
    "build": "rimraf dist && tsc && yarn sass && yarn cem",
    "tsc": "tsc --watch --preserveWatchOutput",
    "cem": "cem analyze --litelement --exclude dist",

    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"yarn tsc\" \"wtr --watch\"",

    "sass": "node sass2lit.js",
    "sass:watch": "node sass2lit.js --watch",

    "sb": "yarn build && concurrently -k -r \"yarn tsc\" \"yarn sass:watch\" \"yarn sb:wds\"",
    "sb:build": "yarn build && build-storybook --disable-telemetry --output-dir ./dist/storybook",
    "sb:serve": "yarn sb:build && npx serve storybook-static",
    "sb:wds": "wds -c .storybook/server.mjs"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "lit": "^2.0.2",
    "sass": "^1.56.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/eslint-config": "^8.0.2",
    "@open-wc/testing": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-storybook": "^0.5.4",
    "@web/test-runner": "^0.14.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
